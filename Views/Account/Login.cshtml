@section view_title {
    Login
}

@section css {
    <style type="text/css">
        label {
            font-weight: normal !important;
        }
    </style>
}

@if (ViewBag.ErrorMsg != null)
{
    <div class="alert alert-warning">
        <strong>Warning!</strong> @ViewBag.ErrorMsg
    </div>
}

<form class="form-horizontal" method="post" action="" id="frmLogin">
    <div class="form-group">
        <label for="fsfesfewf" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="tefxt" placeholder="Username" name="f_Username">
        </div>
    </div>
    <div class="form-group">
        <label for="ffh" class="col-sm-2 control-label">Type Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="id_password" placeholder="Password" name="f_RawPassword">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="remember"/> Remember
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Login</button>
        </div>
    </div>
</form>