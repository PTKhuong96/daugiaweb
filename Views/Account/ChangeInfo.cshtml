@using BotDetect.Web.Mvc;
@using AuctionWeb.Models
@using AuctionWeb.Helpers;

@section view_title {
    Change Info
}

@model User

@if (ViewBag.ErrorMsg != null)
{
    <div class="alert alert-warning">
        <strong>@ViewBag.ErrorMsg</strong> 
    </div>
}

<form class="form-horizontal" method="post" action="">
    <div class="form-group">
        <label for="fsfesfewf" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.Username" name="Username" readonly>
        </div>
    </div>

    <div class="form-group">
        <label for="faf" class="col-sm-2 control-label">Full Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.Name" name="Name">
        </div>
    </div>
    <div class="form-group">
        <label for="fgf" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.Email" name="Email">
        </div>
    </div>
    <div class="form-group">
        <label for="ffh" class="col-sm-2 control-label">Type Password To Confirm</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" name="Password">
        </div>
    </div>
    <div class="form-group" hidden>
        <label for="ffh" class="col-sm-2 control-label">Type Password To Confirm</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" value="@Model.ID" name="ID">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    </div>
</form>