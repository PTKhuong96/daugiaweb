@using AuctionWeb.Models

@model List<Product>

@section view_title {
    List Of Products
}

@if(Model == null)
{   
    <text>No Products Available</text>
}
else
{
        <div class="row">
            @foreach (var p in Model)
            {
            <div class="col-sm-4">
                <div class="thumbnail">
                    <img src="~/Img/products/@p.ID/main.jpg" height="150" width="240" alt ="...">
                    <div class="caption">
                        <h3>@p.Name</h3>
                        <h3>Price: @string.Format("{0:N0}", @p.CurrentPrice)</h3>
                        <p>
                            <a href="@Url.Action("Details","Products", new { id = @p.ID })" class="btn btn-success" role="button">
                            Detail
                            </a>
                            <a href="#" class="btn btn-success" role="button">
                                <i class="fa fa-cart-plus"></i>
                                Buy Now
                            </a>
                        </p>
                    </div>
                </div>
            </div>
            }
        </div>
}

